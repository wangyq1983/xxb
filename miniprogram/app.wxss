/**app.wxss**/
button{
    background: #7691fc;
    color:#fff;
}
page {
  background-color:#f4f4f4;
}
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

view {
    color: #333;
}

.overflow_h {
    overflow: hidden;
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.titleStyle{
    color:#494949;
    font-size: 30rpx;
    font-weight: bold
}
.noData{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top:50rpx;
}
.noDataImg{
  width:50rpx;
  height:50rpx;
  margin-right:20rpx;
}
.inputTitleBox{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  padding:10rpx 0;
  border-bottom: 1rpx solid #ccc;
}
.inputTitleBox input{
  height:100rpx;
  line-height: 100rpx;
  color:#666;
  padding:0 20rpx;
}
.textareaBox{
  padding:20rpx;
}
.myArrow{
  width:24rpx;
  height:24rpx;
}
.isloading{
   position: fixed;
  top: 0;
  right:0;
  bottom:0;
  left:0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 999;
  background: #fff
}
.jielongButton{
  border-radius:0
}

/* 接龙列表 */
.jlItem{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.jlItemWord{
  color:#666;
  font-size: 28rpx;
}
.tips{
  color:#fff;
  font-size: 22rpx;
  padding:3rpx 12rpx;
  border-radius:10rpx;
  display: inline-block
}
.tipjielong{
  background: #fa8d30;
}
.tiptable{
  background: #2069f8;
}
.tiptoupiao{
  background: #2ad82e;
}

.picker{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.downarrow{
  width:40rpx;
  height:40rpx;
  margin-right:10rpx;
}
.downarrowbg{
  background-image:url(data:image/png;base64,);
  background-size:cover ;
}
.isend{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color:#666;
  padding:20rpx;
}
.emptyBg{
  background: #fff;
  width:100%;
  height:100vh;
}
.isMustFill{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:30rpx;
  color:#888;
  font-size: 30rpx;
}
.datetime{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center
}
#editor{
  font-style: normal
}