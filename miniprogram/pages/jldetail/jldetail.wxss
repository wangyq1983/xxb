  color:#666;
}
.nojl{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
  padding:0 30rpx;
  margin-bottom:16rpx;
}
.myTxt2{
  color:#555;
  font-size: 28rpx;
}
.jlList{
  background: #fff;
  padding:30rpx;
}
.jlList .title{
  width:90%;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-left:5%;
  margin-right:5%;
  margin-bottom: 20rpx;
  border-bottom:1rpx solid #ccc;
}
.jlList .list{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.jlList .item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom:1rpx solid #eee;
}

.itemIndex{
  width:76rpx;
  height:76rpx;
  text-align: center;
  line-height: 76rpx;
}
.jlIcon{
  width:58rpx;height:58rpx;
  border-radius:30rpx;
  margin-right:40rpx;
}
.jlname{
  width:420rpx;
  line-height: 38rpx;
  font-size: 24rpx;
}
.jltime{
  width:160rpx;
  height:76rpx;
  line-height:76rpx;
  font-size: 24rpx;
}
.jlAction{
  width:100%;
  height:120rpx;
  position: fixed;
  background: #fff;
  left:0;
  bottom:0;
  right:0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 99;
}
.jlAction input{
  width:450rpx;
  height:76rpx;
  line-height: 76rpx;
  background: #fff;
  margin-left:30rpx;
  margin-right:20rpx;
  border:1rpx solid #dfdfdf;
  border-radius:6rpx;
  float: left;
}
.jlAction button{
  width:220rpx;
  height:80rpx;
  line-height: 80rpx;
  background: #7691fc;
  border-radius: 10rpx;
  font-size: 28rpx;
  float:left;
}
.topBar{
  width:100%;
  height:60rpx;
  line-height:60rpx;
  position: fixed;
  top:0;
  left:0;
  background: #fff;
  z-index: 99;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  padding-top:10rpx;
}
.topBarIcon{
  width:48rpx;
  height:48rpx;
  margin-left:20rpx;
}
.shareIcon{
  width:42rpx;
  height:42rpx;
  float:right;
}
.jlfenxiang{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background: transparent;
  margin:right;
}
.jlfenxiang::after{
  border: 0; 
}
.jlinput{
  font-size: 24rpx;
  padding-left:10rpx;
}
.jlcydel{
  width:90rpx;
  height:50rpx;
  background: #7691fc;
  border-radius: 5rpx;
  color:#fff;
  line-height: 50rpx;
  text-align: center;
  margin-left:10rpx;
  font-size:26rpx;
}