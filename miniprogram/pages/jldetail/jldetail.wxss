  flex-direction: row;
  justify-content: flex-start;
  align-items: center
}
.toolBox{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left:20rpx;
  margin-right:20rpx;
}
.toolIcon{
  width:38rpx;
  height:38rpx;
  margin-right:10rpx;
}
.toolWord{
