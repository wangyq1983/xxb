/* pages/wxlogin/wxlogin.wxss */
page{
  background: #fff;
}
.wxloginBox{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center
}
.wxloginImg{
  width:100%;
  height:333rpx;
  text-align: center;
  padding-top: 27rpx;
  overflow: hidden
}
.wxloginImg image{
  width:500rpx;
  height:333rpx;
}
.wxloginBtn{
  width:350rpx;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #32acf5;
  color:#fff;
  border-radius: 6rpx;
  margin-top: 80rpx;
  font-size: 32rpx
}
.otherlogin{
  width:310rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f8f8f8;
  color:#787878;
  border-radius: 6rpx;
  margin-top: 90rpx;
  font-size: 28rpx;
}
.telloginBtn{
  width:320rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  color:#32acf5;
  border-radius: 6rpx;
  margin-top: 80rpx;
  border:1rpx solid #32acf5;
  font-size: 32rpx
}
.tips{
  width:550rpx;
  padding:0 100rpx;
  font-size: 28rpx;
  color:#888;
  margin-top:80rpx;
}
