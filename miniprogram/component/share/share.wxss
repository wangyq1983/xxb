/* component/share/share.wxss */
.sharebox{
  background: #fff;
  width:750rpx;
  height:320rpx;
  position: absolute;
  bottom:0;
  left:0;
  display: flex;
  flex-direction: column;
  z-index: 99
}
.shareCon{
  width:750rpx;
  height:220rpx;
  flex-direction: row;
  display: flex;
}
.shareBox{
  width:50%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-top:20rpx;
}
.sharecancle{
  width:750rpx;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  border-top: 10rpx solid #dddddd}
.iconstyle{
  width:100rpx;
  height:100rpx;
}
.wordStyle{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start;
  text-align: center
}
.sharefont{
  font-size: 30rpx;
}
.shareBg{
  border:transparent;
  background: transparent;
}
.shareBg::after{
  border: 0; 
}